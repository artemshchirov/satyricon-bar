{
  "css.validate": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  // Tailwind CSS Autocomplete, add more if used in projects
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "classNames",
    "containerClassName"
  ],
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#2b5e88",
    "activityBar.background": "#2b5e88",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#491732",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#2b5e88",
    "statusBar.background": "#1f4361",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#2b5e88",
    "statusBarItem.remoteBackground": "#1f4361",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#1f4361",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#1f436199",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#1F4361"
}
